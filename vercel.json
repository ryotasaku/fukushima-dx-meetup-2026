{
  "version": 2,
  "name": "fukushima-dx-meetup-2026",
  "rewrites": [
    {
      "source": "/thanks",
      "destination": "/thanks.html"
    },
    {
      "source": "/thanks/",
      "destination": "/thanks.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
